<!DOCTYPE html>
<html>
<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
<div class="jumbotron text-center">
  <div class="container">
    <h1><%= title %></h1>
    <p>Week 2 - Add/Remove Users</p>
  </div>
</div>
<div class="container">
  <div>
    <h2>Add User</h2>
    <form class=taForm action="/ta02/addUser" method="post">
      <label >User Name</label>
      <input type="text" name="username" id="">
      <button type="submit">Add</button>
    </form>
  </div>
  <div>
    <h2>Remove User</h2>
    <form class=taForm action="/ta02/removeUser" method="post">
      <label >User Name</label>
      <input type="text" name="username" id="">
      <button type="submit">Remove</button>
    </form>
  </div>
  <div>
    <% if (error!='') {%>
      <p style="color: red;"> <%= error %> </p>
      <%}%>
  </div>
  <div>
    <% for (user of userNames) {%>
      <p> <%= user %> </p>
      <%}%>
  </div>
</div>


</body>
</html>