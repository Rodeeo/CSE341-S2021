<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs') %>
    <div class="hero-body"> 
        <% if (orders.length <= 0) { %>
            <h1>Nothing there!</h1>
                <% } else { %>
                    <ul class="orders">
                        <% orders.forEach(order => { %>
                            <li class="ordersItem">
                                <h1>Order - # <%= order._id %></h1>
                                    <ul class="orders__products">
                                        <% order.products.forEach(p => { %>
                                            <li class="ordersProducts-item">
                                                <%= p.quantity %>
                                                <img src="<%= p.product.imageUrl %>" alt="<%= p.product.title %>" class="constrained-height">
                                                <%= p.product.title %>
                                            </li> 
                                        <% }); %>
                                    </ul>
                                </li>
                            <% }); %>
                        </ul>  
                    <% } %>
                </div>
 <%- include('../includes/footer.ejs') %>