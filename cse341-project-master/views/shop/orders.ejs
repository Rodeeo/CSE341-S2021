<body>
    <%- include('../includes/header.ejs') %>
    <div class="hero-body"> 
        <% if (orders.length <= 0) { %>
            <h1>Nothing there!</h1>
        <% } else { %>
            <div>
                <% orders.forEach(order => { %>
                    <article class="itemProduct">
                        <header class="itemHeader">
                        <h2 class="title" >Order# <%= order._id %></h2>
            
                            <% order.products.forEach(p => { %>
                                <div class="itemcontent"> 
                                   <span><h3>Dice: <%= p.product.description %></h3></span>
                                <span><h4>Total: <%= p.quantity %></h4></span>
                            </div> 
                            </header>
                                    <div class="itemImage">
                                        <img src="<%= p.product.imageUrl %>" alt="<%= p.product.title %>">
                                    </div>
                                
                              <% }); %>
                        
                    </article>
                     <% }); %>
                        </div>
            <% } %>
    </div>
 <%- include('../includes/footer.ejs') %>